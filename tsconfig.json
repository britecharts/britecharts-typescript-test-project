{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
